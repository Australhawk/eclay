<!DOCTYPE html>
<html>
<head>
  <title>e-Clay - Soluciones WEB</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<!-- NAVBAR -->
		<div class="navbar">
		  <div class="navbar-inner">
		    <a class="brand" href="#"><%= image_tag "logo.png", :width => '140' %></a>
		    <div class="fix-menu">
			    <ul class="nav" >
			      <li>
			      	<%= link_to (root_path) do %>
			      		<i class="icon-home"></i> Inicio
			      	<% end %>
			      </li>
			      <li class="dropdown">
			      	<a class="dropdown-toggle" data-toggle="dropdown" href="#">
			      		<i class="icon-book"></i> Servicios <b class="caret"></b>
			      	</a>
				    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
						<li><a tabindex="-1" href="#">Aplicaciones Web</a></li>
						<li><a tabindex="-1" href="#">Aplicaciones Mobiles</a></li>
						<li class="divider"></li>
						<li class="dropdown-submenu">
							<a tabindex="-1" href="#">Otros Servicios</a>
							<ul class="dropdown-menu">
								<li><a tabindex="-1" href="#">Posicionamiento Web</a></li>
								<li><a tabindex="-1" href="#">Branding</a></li>
								<li><a tabindex="-1" href="#">Diseño</a></li>
								<li><a tabindex="-1" href="#">Addons</a></li>
								<li><a tabindex="-1" href="#">Webservices</a></li>
							</ul>
						</li>
					</ul>

			      </li>
			      <li><a href="#"><i class="icon-user"></i> Clientes</a></li>
			      <li>
			      	<%= link_to (new_contact_path) do %> 
			      		<i class="icon-envelope"></i> Contacto
			      	<% end %>
			      </li>

			    </ul>
			    <form class="navbar-search pull-right">
				  <input type="text" class="search-query" placeholder="Buscar">
				</form>
			</div>
		  </div>
		</div>
		<!-- ALERTAS -->
		<% flash.each do |type,message| %>
			<div class="alert <%= flash_class type %>">
				<a href="#" class="close" data-dismiss="alert">&times;</a>
				<%= message %>
			</div>
		<% end %>
		<!-- MAIN CONTENT -->
		<%= yield %>

		<!-- FOOTER -->
		<div class="well">
			<div class="row">
				<div class="span4">
					<% if admin_signed_in? %>
						<div class="btn-group dropup">
						  <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
						    <%= current_admin.profile_name %>
						    <span class="caret"></span>
						  </a>
						  <ul class="dropdown-menu">
						    <li>
						    	<%= link_to (edit_admin_registration_path) do %>
							    	<i class="icon-user"></i> Perfil
							    <% end %>
						    </li>
						    <li>
						    	<%= link_to (works_path) do %>
							    	<i class="icon-book"></i> Trabajos
							    <% end %>
						    </li>
						    <li>
						    	<%= link_to (contacts_path) do %>
							    	<i class="icon-envelope"></i> Contactos
							    <% end %>
						    </li>
						  </ul>
						</div>
						<%= link_to 'Cerrar sesión', admin_logout_path, html_options = {class: "btn btn-mini"} %>
					<% else %>
						<%= link_to 'Administrar', new_admin_session_path, html_options = {class: "btn btn-mini"} %>
					<% end %>
				</div>
			</div>
			

		</div>

</body>
</html>
